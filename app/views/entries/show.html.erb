<h1>
  <div class= "page-header">
     <s><%=@entry.description %></s>
  </div>
</h1>
<h4>
  Date:<%= @task.due_date.strftime("%m/%d/%Y") %>
</h4>

  <ol class="breadcrumb">
    <li><%= link_to "Journals", projects_path %></li>
    <li><%= link_to @journal.name, journal_path(@journal) %></li>
    <li><%= link_to "Entries", journal_entries_path(@journal) %></li>
    <li><%= @entry.description %></li>
  </ol>

  <h3> Comments </h3>
  <% @entry.comments.each do |comment| %>
  <div class= "row">
      <div class= "col-md-3">
        <p class="text-muted"><%= time_ago_in_words(comment.created_at) + ' ago' %></p>
      </div>
      <div class= "col-md-9">
        <%= comment.description %>
      </div>
  </div>
  <% end %>

  <div class= "row">
    <div class= "form-group">
      <div class= "col-md-9 col-md-offset-3">
        <%= form_for [@entry, @comment], html: {class: "form-horizontal"} do |f| %>
          <%= f.text_area :description, class: "form-control" %>
            <div class= "form-group">
              <div class = "col-md-9">
                <br>
                <%= f.submit "Add Comment", class: "btn btn-info" %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
