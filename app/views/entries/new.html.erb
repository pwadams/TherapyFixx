<div class="page-header">
  <h1>New Entry</h1>

  <ol class="breadcrumb">
    <li><%= link_to "Journals", journals_path %></li>
  </ol>

<%= form_for [@journal, @entry], html: {class: "form-horizontal" } do |f| %>
  <%=render partial: "shared/errors", locals: {object: @entry, offset_option: 'col-md-offset-3'} %>

  <div class="form-group">
    <%= f.label :name, class: "col-md-2 control-label" %>
    <div class= "col-md-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :description, class: "col-md-2 control-label" %>
      <div class= "col-md-3">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%=f.date_field :date, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class= "col-md-4 col-md-offset-2" >
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", journal_entries_path, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
