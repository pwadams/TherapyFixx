<h1>
  <div class= "page-header">
    <% if current_user %>
    <%= @user.full_name %>
    <% end %>
  </div>
</h1>


<dl class="dl-horizontal">
  <dt>First name</dt>
  <dd><%= @user.first_name %></dd>
  <dt>Last name</dt>
  <dd><%= @user.last_name %></dd>
  <dt>Email</dt>
  <dd><%= mail_to @user.email %></dd>
</dl>

<table class="table">
  <h2> Journals</h2>
  <thead>
    <th>Name</th>
    <th>Date</th>
  </thead>
  <tbody>
      <tr>
    <% current_user.journals.each do |journal| %>
        <td class="col-md-3">
          <%= link_to journal.name, journal_path(journal) %>
        </td>
    <% end %>
      </tr>
</table>

<table class="table">
  <h2> Stress Logs</h2>
  <thead>
    <th>Date</th>
  </thead>
  <tbody>
      <tr>
    <% current_user.stress_logs.each do |stresslog| %>
        <td class="col-md-3">
          <%= link_to stresslog.date, user_stress_logs_path(@user) %>
        </td>
    <% end %>
      </tr>
</table>

<table class="table">
  <h2>Anxiety Scales</h2>
  <thead>
    <th>Date</th>
  </thead>
  <tbody>
      <tr>
    <% current_user.anxiety_scales.each do |anxietyscale| %>
        <td class="col-md-3">
          <%= link_to anxietyscale.date, user_anxiety_scales_path(@user) %>
        </td>
    <% end %>
      </tr>
</table>
