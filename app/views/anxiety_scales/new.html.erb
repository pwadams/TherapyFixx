<div class= "container">
  <div class="page-header">
    <h1>New Anxiety Scale</h1>
  </div>

    <ol class="breadcrumb">
      <li><%= link_to "Assessments", assessments_path %></li>
    </ol>

  <%= form_for @anxiety_scale, html: {class: "form-horizontal"}  do |f| %>
    <%= render partial: "shared/errors", locals: {object: @anxiety_scale, offset_option: 'col-md-offset-2'} %>


          <%= f.label :date %>
          <%= f.date_field :date %><br>
          <%= f.label :worrying %>
          <%= f.range_field :worrying, :in => 0..100, :step => 1 %>
          <%= f.label :feeling_afraid %>
          <%= f.range_field :feeling_afraid, :in => 0..100, :step => 1 %>
          <%= f.label :feeling_tense %>
          <%= f.range_field :feeling_tense, :in => 0..100, :step => 1 %>
          <%= f.label :difficulty_sleeping %>
          <%= f.range_field :difficulty_sleeping, :in => 0..100, :step => 1 %>
          <%= f.label :worrying %>
          <%= f.range_field :worrying, :in => 0..100, :step => 1 %>



        <%= f.submit %>
        <%= link_to "Cancel", assessments_path, class: "btn btn-default" %>
      </div>
    </div>
<% end %>
</div>
