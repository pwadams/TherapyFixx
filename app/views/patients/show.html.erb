<h1>
  <div class= "page-header">
    <% if @patient == current_user || current_user.admin %>

    <%= @patient.full_name %>
    <% end %>
  </div>
</h1>


<dl class="dl-horizontal">
  <dt>First name</dt>
  <dd><%= @patient.first_name %></dd>
  <dt>Last name</dt>
  <dd><%= @patient.last_name %></dd>
  <dt>Email</dt>
  <dd><%= mail_to @patient.email %></dd>
  <% end %>
